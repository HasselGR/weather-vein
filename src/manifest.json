{
  "name": "Weather Vein",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "Nor Rain nor Storm, check if it will be a sunny day today√ß",
  "author": "David Gamboa",
  "permissions" :["storage", "tabs", "<all_urls>", "activeTab"],
  "homepage_url": "https://github.com/HasselGR/weather-vein",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
