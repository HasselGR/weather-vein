{
  "name": "__MSG_appName__",
  "version": "0.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDesc__",
  "author": "David Gamboa",
  "default_locale": "en",
  "permissions" :["storage", "tabs", "<all_urls>", "activeTab", "alarms"],
  "homepage_url": "https://github.com/HasselGR/weather-vein",
  "icons": {
    "128": "images/nublado.png"
  },
  "browser_action": {
    "default_icon": "images/nublado.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "run_at": "document_end",
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
